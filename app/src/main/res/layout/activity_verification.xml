<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:background="#F2F7F4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Verification">


    <ImageView
        android:src="@drawable/login"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:text="OTP Verification"
        android:textAlignment="center"
        android:textColor="#036007"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:text="We will send one time OTP on this Mobile Number..."
        android:textAlignment="center"
        android:textColor="#656262"
        android:layout_marginTop="6dp"
        android:textSize="16dp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="15dp"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ET_Type_Phone_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:gravity="center_horizontal"
                android:ems="1"
                android:hint="Type Your Phone Number "
                android:inputType="phone"
                android:minHeight="48dp"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/SendOTP_btn"
                android:text="Send OTP"
                android:textStyle="bold|normal"
                android:textAllCaps="false"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_btn_background"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>